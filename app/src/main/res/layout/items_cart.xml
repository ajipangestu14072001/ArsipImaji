<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20.5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivImgProductCart"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvTitleProductCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="14sp"
                android:text="No documentation found." />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvCartAvailableCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="Sisa 2"/>

            <TextView
                android:id="@+id/lokasi"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="Solaria"/>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:text="50%"/>

                <TextView
                    android:id="@+id/tvNormalPrice"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:letterSpacing="-0.02"
                    android:text="Rp 100.000"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="Rp 50.000"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="18dp">

        <ImageView
            android:id="@+id/ivDeleteProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_round_delete_24" />

        <View
            android:layout_marginStart="10dp"
            android:layout_width="1dp"
            android:layout_height="19dp"
            android:layout_toRightOf="@+id/ivDeleteProduct"
            android:background="@color/color2"
            android:layout_centerVertical="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_alignParentRight="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAddToCart"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/color2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvpriceAfterPromo">

                <TextView
                    android:id="@+id/tvAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:letterSpacing="-0.02"
                    android:padding="4dp"
                    android:text="Beli"
                    android:textColor="#ffffff"
                    android:textStyle="normal" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_marginTop="9.5dp"
        android:layout_marginBottom="12dp"
        android:background="@color/color2"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>